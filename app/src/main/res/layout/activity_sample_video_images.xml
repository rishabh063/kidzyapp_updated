<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sample_video_images">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:src="@drawable/fruit_punch"
    android:scaleType="fitXY"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            app:cornerRadius="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="50dp"
            app:backgroundTint="@color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/start_button"
            android:layout_centerHorizontal="true"
            android:text="Start"
            android:visibility="visible"
            android:layout_margin="50dp" />
        <ImageView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/question"
            android:layout_margin="20dp"
            android:id="@+id/sample_img"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sample_video"
            android:visibility="invisible"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.7"
                ></RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_centerInParent="true">
        <VideoView
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:id="@+id/video_view"
            app:layout_constraintDimensionRatio="2560:1080"
            android:layout_centerInParent="true"
            />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_sample"
                android:layout_centerInParent="true"
                android:text="   Sample Text something something   "
                android:layout_alignParentBottom="true"
                android:layout_margin="30dp"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/cross"
                 android:layout_margin="20dp"
                android:id="@+id/cross"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/play"
                android:layout_margin="20dp"
                android:id="@+id/start"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_margin="20dp"
            android:layout_height="50dp"
            android:src="@drawable/back_button"
            android:id="@+id/back_button"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>